<UserControl x:Class="CommonWPF.SimulationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommonWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel>
        <Button Width="200" HorizontalAlignment="Left" Command="{Binding RunSimulation}">Run Simulation</Button>
        <Button Width="200" HorizontalAlignment="Left" Margin="0,10,0,0" Command="{Binding Stop}">Stop Simulation</Button>
        <Button Width="200" HorizontalAlignment="Left" Margin="0,10,0,0" Command="{Binding Reset}">Reset</Button>
    </StackPanel>
</UserControl>
